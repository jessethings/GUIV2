                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="0.562"/>
                            <RotateTransform/>
                            <TranslateTransform X="0.49"/>
                        </TransformGroup>
                    </ListView.RenderTransform>
                    <ListView.View>
                        <GridView>
